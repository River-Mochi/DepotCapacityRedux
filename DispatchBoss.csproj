<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<!-- keep configs -->
		<Configurations>Debug;Release</Configurations>

		<Nullable>enable</Nullable>

		<!-- where Paradox publish metadata lives -->
		<PublishConfigurationPath>Properties\PublishConfiguration.xml</PublishConfigurationPath>

  <!-- Single source of truth for version number -->
	  <Version>1.3.5</Version>
	<AssemblyVersion>$(Version).0</AssemblyVersion>
	<FileVersion>$(Version).0</FileVersion>  <!-- for file properties -->

    <AssemblyName>DispatchBoss</AssemblyName>
    <RootNamespace>DispatchBoss</RootNamespace>


	</PropertyGroup>

	<!-- CS2 toolchain -->
	<Import Project="$([System.Environment]::GetEnvironmentVariable('CSII_TOOLPATH', 'EnvironmentVariableTarget.User'))\Mod.props" />
	<Import Project="$([System.Environment]::GetEnvironmentVariable('CSII_TOOLPATH', 'EnvironmentVariableTarget.User'))\Mod.targets" />

	<ItemGroup>
		<Reference Include="Game"><Private>false</Private></Reference>
		<Reference Include="Colossal.Core">
			<Private>false</Private>
		</Reference>
		<Reference Include="Colossal.Logging">
			<Private>false</Private>
		</Reference>
		<Reference Include="Colossal.IO.AssetDatabase">
			<Private>false</Private>
		</Reference>
		<Reference Include="Colossal.UI">
			<Private>false</Private>
		</Reference>
		<Reference Include="Colossal.UI.Binding">
			<Private>false</Private>
		</Reference>
		<Reference Include="Colossal.Localization">
			<Private>false</Private>
		</Reference>

		<Reference Include="Colossal.PSI.Common">
			<Private>false</Private>
		</Reference>
		<Reference Include="Colossal.Mathematics">
			<Private>false</Private>
		</Reference>
		
		<Reference Include="UnityEngine.CoreModule">
			<Private>false</Private>
		</Reference>
		<Reference Include="Unity.Burst">
			<Private>false</Private>
		</Reference>
		<Reference Include="Unity.Collections">
			<Private>false</Private>
		</Reference>
		<Reference Include="Unity.Entities">
			<Private>false</Private>
		</Reference>
		<Reference Include="Unity.Mathematics">
			<Private>false</Private>
		</Reference>
	</ItemGroup>

	<!-- make toolchain files visible in VS under Properties -->
	<ItemGroup>
		<None Include="$(ModPropsFile)" Link="Properties\Mod.props" />
		<None Include="$(ModTargetsFile)" Link="Properties\Mod.targets" />
	</ItemGroup>

	<!-- Exclude docs/ from compile, output, and publish packaging -->
	<ItemGroup>
		<!-- If a .cs is in docs/, don't compile it -->
		<Compile Remove="docs\**\*.cs" />

		<!-- Remove docs from any default "None"/"Content" globs (SDK projects + packaging targets) -->
		<None Remove="docs\**" />
		<Content Remove="docs\**" />

		<!-- Belt-and-suspenders: if anything still shows up as None/Content, force it to never copy -->
		<None Update="docs\**">
			<CopyToOutputDirectory>Never</CopyToOutputDirectory>
			<CopyToPublishDirectory>Never</CopyToPublishDirectory>
		</None>
		<Content Update="docs\**">
			<CopyToOutputDirectory>Never</CopyToOutputDirectory>
			<CopyToPublishDirectory>Never</CopyToPublishDirectory>
		</Content>
	</ItemGroup>

</Project>
